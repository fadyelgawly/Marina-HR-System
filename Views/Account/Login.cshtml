@model MarinaHR.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "تسجيل الدخول";
}
<div class="row d-flex justify-content-center" >
    <div class="col-md-4">
        <section>
            <form id="Account" method="POST">
                <div class="display-4 text-right">
                    تسجيل الدخول
                </div>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group text-right">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group text-right">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-right">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" checked />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                        <button type="submit" class="btn btn-primary float-left">تسجيل الدخول</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>