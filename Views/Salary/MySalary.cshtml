@model IList<MarinaHR.ViewModels.SalaryViewModel>
@using MarinaHR.Models

<div class="container">
    <div class="text-left">
        <a class="btn btn-success" asp-controller="Salary" asp-action="Create">طلب سلفه</a>
    </div>
    <div class="row">
        <div class="display-4 text-right float-right">
            الرواتب
        </div>
        <div class="container font-weight-bold">
            <div class="row">
                <div class="col-sm">
                    إجمالي رصيد: @ViewData["TotalBalance"]
                </div>
            </div>
        </div>
        <br />
        <table class="table table-striped float-left">
            <thead>
                <tr class="text-right">
                    <th scope="col">رقم المعملة</th>
                    <th scope="col">اداع</th>
                    <th scope="col">صرف</th>
                    <th scope="col">وصف المعملة</th>
                    <th scope="col">تاريخ</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @item.ID
                    </td>
                    <td class="text-right">
                        @if (item.transactionType == TransactionType.Deposit)
                        {@item.Amount}
                    </td>
                    <td class="text-right">
                        @if (item.transactionType == TransactionType.Credit)
                        {@item.Amount}
                    </td>
                    <td class="text-right">
                        @item.Description
                    </td>
                    <td class="text-right">
                        @item.dateTime.ToString("dd/MM/yyyy")
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

