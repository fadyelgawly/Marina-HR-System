@model MarinaHR.Models.Vacation

<form asp-action="RequestVacation" asp-controller="Vacation" method="POST">
<div class="form-group text-right">
    <label asp-for="Reason" ></label>
    <input asp-for="Reason" class="form-control">
    <span asp-validation-for="Reason"></span>
</div>
<div class="form-group text-right">
    <label asp-for="StartDate" ></label>
    <input asp-for="StartDate" class="form-control">
    <span asp-validation-for="StartDate"></span>
</div>
<div class="form-group text-right">
    <label asp-for="EndDate" ></label>
    <input asp-for="EndDate" class="form-control">
    <span asp-validation-for="EndDate"></span>
</div>
<input type="submit" class="btn btn-info" value="طلب اجازة">
</form>